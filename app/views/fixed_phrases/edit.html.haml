- breadcrumb :edit_fixed_phrase, @fixed_phrase.id

%h1.mb-5
    = t('.title')

= form_with(model: [@fixed_phrase], url: fixed_phrase_path, local: true) do |f|
    = render 'shared/error_messages', model: f.object
    .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
    .form-group
        = f.label :text
        = f.text_area :text, class: 'form-control'
    .form-group
        = f.submit nil, class:'btn btn-primary'