- breadcrumb :admin_item, @item.id
%h1.mb-5 
    = t '.title'

.table-responsive
    %table.table.text-nowrap
        %tbody
            %tr 
                %td 
                    = Game.human_attribute_name(:title)
                %td 
                    = @item.game.title
            %tr 
                %td 
                    = ItemGenre.human_attribute_name(:name)
                %td 
                    = @item.item_genre.name
            %tr 
                %td 
                    = Item.human_attribute_name(:name)
                %td 
                    = @item.name
            %tr 
                %td 
                    = Item.human_attribute_name(:unit_name)
                %td 
                    = @item.unit_name ? @item.unit_name : t('empty')
            %tr 
                %td 
                    = Item.human_attribute_name(:registered_count_buy_item_trades)
                %td 
                    = @registered_count_buy_item_trades
            %tr 
                %td 
                    = Item.human_attribute_name(:registered_count_sale_item_trades)
                %td 
                    = @registered_count_sale_item_trades

= link_to t('link_to.edit'), edit_admin_item_path(@item), class: 'btn btn-success'
