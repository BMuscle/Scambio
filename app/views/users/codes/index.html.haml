- breadcrumb :user_codes
%h1.mb-5 
    = t '.title'

.form-group#nintendo-friend-code
    %h4
        = NintendoFriendCode.model_name.human
    - if @nintendo_friend_code
        .mr-3
        = @nintendo_friend_code.friend_code
        = link_to t('link_to.edit'), edit_user_codes_nintendo_friend_code_path(@nintendo_friend_code, user_id: current_user.id), class: 'btn btn-success mr-2 ml-3'
        = link_to t('link_to.destroy'), user_codes_nintendo_friend_code_path(@nintendo_friend_code, user_id: current_user.id), method: 'delete', data: {confirm: t('confirm.simple_destroy', name: NintendoFriendCode.model_name.human)}, class: 'btn btn-danger'
    - else
        = link_to t('link_to.regist'), new_user_codes_nintendo_friend_code_path(current_user), class: 'btn btn-primary'
.form-group#play-station-network-id
    %h4
        = PlayStationNetworkId.model_name.human
    - if @play_station_network_id
        = @play_station_network_id.psn_id
        = link_to t('link_to.edit'), edit_user_codes_play_station_network_id_path(@play_station_network_id, user_id: current_user.id), class: 'btn btn-success mr-2 ml-3'
        = link_to t('link_to.destroy'), user_codes_play_station_network_id_path(@play_station_network_id, user_id: current_user.id), method: 'delete', data: {confirm: t('confirm.simple_destroy', name: PlayStationNetworkId.model_name.human)}, class: 'btn btn-danger'
    - else
        = link_to t('link_to.regist'), new_user_codes_play_station_network_id_path(current_user), class: 'btn btn-primary'