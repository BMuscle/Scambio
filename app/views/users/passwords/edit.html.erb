<h1 class="mb-5"><%= t('users.passwords.edit.change_your_password') %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t('users.passwords.edit.new_password') %><br />
    <% if @minimum_password_length %>
      <em><%= t('users.passwords.edit.password_conditions') %></em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('users.passwords.edit.confirm_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('users.passwords.edit.change_my_password'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
