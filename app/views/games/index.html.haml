- breadcrumb :games
%h1.mb-5
    = t('.title')

.mb-5
    = search_form_for @q do |f|
        .form-group
            = f.label :title, Game.human_attribute_name(:title)
            = f.search_field :title_cont, class: 'form-control'
        .form-group
            = f.submit t('helpers.submit.search'), class: 'btn btn-success'

%table.table.text-nowrap
    %thead.thead-light
        %tr 
            %th
                = Game.human_attribute_name(:title)
            %th
                .ml-5
                    = t '.button'
    %tbody
        - @games.each do |game|
            %tr 
                - if game.image_icon.present?
                    %td.image-icon{style: "background-image: url(#{game.image_icon_url});"}
                - else
                    %td.image-icon
                        = game.title
                %td
                    = link_to t('.item_trades'), game_item_trades_path(game_id: game.id), class: 'btn btn-primary ml-5'
